
<div id="row">
  <div class="sidebar">
    <span class="genre-search"><a href="/videos/show/" class="genre">Genre</a></span>
    <br>
    <span class="views-search"><a href="" class="views">Views</a></span>
    <br>
    <form action="/videos/search"method="get">
    <span class="search">
      <input type="text" class="search"><button>Search</button>
    </span>
    </form>
  </div>
</div>

<div class="row">
  <div class="col s6 offset-s1">
    <div class="collection">
      <% @videos.each do |video| %>
        <a href="/videos/<%= video['id'] %>" class="collection-item left-align">
        <span class="vid-title"><%= video['title']  %> </span>
        <br>
        <span class="desc"><%= video['description'] %></a> </span> 
      <% end %>
    </div>
  </div>
</div>